{
  "name": "video-resize-wasm",
  "version": "1.0.0",
  "description": "Simple video resizer using ffmpeg.wasm",
  "main": "src/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:netlify": "bash scripts/build.sh",
    "serve": "http-server dist -p 8081 --cors -c-1 -S -C ssl/cert.pem -K ssl/key.pem",
    "dev:ssl": "bash scripts/generate-ssl.sh",
    "dev": "npm run dev:ssl && npm run build && npm run serve",
    "clean": "rm -rf dist ssl/*.pem"
  },
  "dependencies": {
    "@ffmpeg/core": "0.12.4",
    "@ffmpeg/ffmpeg": "0.12.7",
    "@ffmpeg/util": "0.12.1"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^11.0.0",
    "http-server": "^14.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "worker-loader": "^3.0.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
